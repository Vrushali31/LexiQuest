{
  "manifest_version": 3,
  "name": "PolyglotPro",
  "description": "Context-aware language mentor (MVP) â€” highlight text, translate, simplify, explain using Gemini Nano APIs.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup/popup.js"]
    }
  ]
}
